/* miniprogram/pages/blog-comment/blog-comment.wxss */
.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
}

.blog-card {
  margin-bottom: 20rpx;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.tab-item {
  color: #697480;
}

.comment-list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  flex: 1;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
  padding: 10rpx 0;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
}