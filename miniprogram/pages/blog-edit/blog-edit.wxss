/* miniprogram/pages/blog-edit/blog-edit.wxss */
.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
  align-items: center;
}

.word-num {
  flex: 1;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
  text-align: right;
}

.send-btn {
  color: #fff;
  background-color: #d43d33;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-warp {
  height: 220rpx;
  width: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  position: relative;
  /* overflow: hidden; */
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  background-color: #000;
  color: #fff;
  font-size: 38rpx;
  line-height: 40rpx;
  font-weight: bolder;
  opacity: 0.4;
}

.select-img {
  border: 2rpx dashed #cbd1d7;
}

.icon-plus-line {
  position: absolute;
  top: 50%;
  left: 50%;
  transform:  translate(-50%,-50%);
  color: #cbd1d7;
  font-size: 60rpx;
}