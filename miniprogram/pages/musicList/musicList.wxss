/* miniprogram/pages/musicList/musicList.wxss */
.detail-container {
  height: 420rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.mask {
  position: absolute;
  width: 100%;
  height: 420rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail-share {
  display: flex;
  width: 100%;
  position: absolute;
  top: 320rpx;
  left: 0;
  justify-content: space-around
}

.share-item {
  width: 100rpx;
  text-align: center
}
.share-font {
  color: #fff;
  font-size: 26rpx
}

.detail-img {
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail {
  flex: 1;
  line-height: 60rpx;
  width:  0;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-name {
  font-size: 36rpx;
  font-weight: 400;
}
