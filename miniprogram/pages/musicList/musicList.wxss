/* miniprogram/pages/musicList/musicList.wxss */
.detail-container {
  height: 420rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.mask {
  position: absolute;
  width: 100%;
  height: 420rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail-share {
  display: flex;
  width: 100%;
  position: absolute;
  top: 320rpx;
  left: 0;
  justify-content: space-around
}

.share-item {
  width: 100rpx;
  text-align: center
}
.share-font {
  color: #fff;
  font-size: 26rpx
}

.detail-img {
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail {
  flex: 1;
  line-height: 60rpx;
  width:  0;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-name {
  font-size: 36rpx;
  font-weight: 400;
}

.top-notice {
  width: 80%;
  position: fixed;
  right: 0;
  top: 0;
  left: 0;
}

.bottom-player {
  height: 120rpx;
  width: 100%;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center
}

.mini-img {
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
}

.mini-detail {
  margin-left:  20rpx;
  flex: 2;
  width: 0;
}

.mini-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.mini-singer{
  padding-left: 32rpx;
  font-size: 36rpx;
  color: #888;
}

.mini-icon {
  flex: 1;
  display: flex;
  justify-content: center
}
.mini-play {
 margin-left: 40rpx;
  flex: 1
}

.mini-list {
  /* margin-left: 60rpx; */
  flex: 1;
}