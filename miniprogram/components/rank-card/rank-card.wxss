/* components/rank-card/rank-card.wxss */
.rank-card {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
}
.img-container {
  width: 220rpx;
  position: relative;
}

.rank-updateFrequency {
  position: absolute;
  left: 10rpx;
  bottom:20rpx;
  font-size: 24rpx;
  color: #fff;
}

.rank-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.music-container {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.music {
  flex: 1;
  line-height: 76rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.rank-name {
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}