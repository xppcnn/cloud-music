/* components/bottom-player/bottom-player.wxss */

.bottom-player {
  height: 80rpx;
  width: 100%;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.mini-img {
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
}

.mini-detail {
  margin-left: 20rpx;
  flex: 2;
  width: 0;
}

.mini-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  padding-left: 32rpx;
}

.mini-singer {
  padding-left: 32rpx;
  font-size: 24rpx;
  color: #888;
}

.mini-icon {
  flex: 1;
  display: flex;
  justify-content: center;
}

.mini-play {
  margin-left: 40rpx;
  flex: 1;
  color: #000;
}

.mini-list {
  /* margin-left: 60rpx; */
  flex: 1;
}

.popup-height {
  height: 40vh;
}

.popup-list {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.list-item1 {
  flex: 3;
  margin-left: 40rpx;
  /* 溢出隐藏 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-item2 {
  flex: 2;
  text-align: right;
}

.list-item3 {
  flex: 1;
  margin-right: 20rpx;
  text-align: right;
}
